<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/match_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

        <TextView
                android:id="@+id/team_a_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Team A" />

            <ImageView
                android:id="@+id/team_a_trophy"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/trophy"
                android:contentDescription="Team A Winner"
                android:layout_marginStart="4dp"
                app:tint="@color/yellow"
                app:layout_constraintStart_toEndOf="@id/team_a_name"
                app:layout_constraintTop_toTopOf="@id/team_a_name"
                app:layout_constraintBottom_toBottomOf="@id/team_a_name" />

            <TextView
                android:id="@+id/vs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" VS "
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintStart_toEndOf="@id/team_a_trophy"
                app:layout_constraintTop_toTopOf="@id/team_a_name"
                app:layout_constraintBottom_toBottomOf="@id/team_a_name"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/team_b_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/vs_text"
                app:layout_constraintTop_toTopOf="@id/team_a_name"
                app:layout_constraintBottom_toBottomOf="@id/team_a_name"
                tools:text="Team B" />

            <ImageView
                android:id="@+id/team_b_trophy"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/trophy"
                android:contentDescription="Team B Winner"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:tint="@color/yellow"
                app:layout_constraintStart_toEndOf="@id/team_b_name"
                app:layout_constraintTop_toTopOf="@id/team_b_name"
                app:layout_constraintBottom_toBottomOf="@id/team_b_name" />

            <TextView
                android:id="@+id/match_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/team_a_name"
                android:layout_marginTop="4dp"
                tools:text="Aug 24, 2025 | 1:00 PM"/>

            <ImageView
                android:id="@+id/delete_match_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/vertical_divider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="Delete Match"
                app:tint="@color/red" />

            <View
                android:id="@+id/vertical_divider"
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toTopOf="@id/delete_match_button"
                app:layout_constraintBottom_toBottomOf="@id/delete_match_button"
                app:layout_constraintEnd_toStartOf="@id/more_options_button" />

            <ImageView
                android:id="@+id/more_options_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="More Options"
                app:tint="@color/black" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/match_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:visibility="gone"
            android:background="@color/white"> <TextView
            android:id="@+id/expanded_match_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            tools:text="25/08/2025, 12:50 PM" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">


                <TextView
                    android:id="@+id/expanded_teams_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    tools:text="Team A vs Team B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@color/light_grey_background"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/trophy"
                    android:contentDescription="Trophy Icon"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/yellow"/>

                <TextView
                    android:id="@+id/expanded_winner_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="Winner: Team A" />
            </LinearLayout>

            <TextView
                android:id="@+id/expanded_final_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                tools:text="Final Score: 25-20, 22-25, 15-12" />

            <TextView
                android:id="@+id/expanded_timeouts_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                tools:text="Timeouts: Team A → 2 used | Team B → 1 used" />

            <Button
                android:id="@+id/export_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="EXPORT"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/export_button_background_dialog"
                android:textColor="@color/red" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

